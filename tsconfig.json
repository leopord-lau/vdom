{
  "compilerOptions": {
    "module": "amd",
    "target": "ES5",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "build",
    "lib": ["es6", "dom"],
    "downlevelIteration": true
  },
  "compileOnSave": true,
  "exclude": ["node_modules"],
  "include": [
    "src",
  ]
}
